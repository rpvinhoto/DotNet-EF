            </Grid>
            <Grid x:Name="GViews">
                <Border Padding="10"
                    Grid.Row="2"
                    Grid.Column="1">
                    <Controls:MetroContentControl x:Name="MCViews"
                                              VerticalAlignment="Stretch"
                                              VerticalContentAlignment="Stretch"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
