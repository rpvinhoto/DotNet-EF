<local:UserControlEditBase x:Class="HarlemErpClient.Views.ProdutosEditView"
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                           xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                           xmlns:local="clr-namespace:HarlemErpClient.Views"
                           xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                           mc:Ignorable="d" 
                           d:DesignHeight="350" d:DesignWidth="300">

    <Grid Margin="10 25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="10,10,0,0">
            <TextBox x:Name="tbCodigoProduto"
                     Margin="0 5"
                     Controls:TextBoxHelper.Watermark="Código do produto"
                     Controls:TextBoxHelper.UseFloatingWatermark="True"
                     KeyDown="LastComponent_KeyDown" />
            <TextBox x:Name="tbDescricaoProduto"
                     Margin="0 5"
                     Controls:TextBoxHelper.Watermark="Descrição do produto"
                     Controls:TextBoxHelper.UseFloatingWatermark="True"
                     KeyDown="LastComponent_KeyDown" />
            <ComboBox x:Name="cbMarcaProduto"
                      Controls:TextBoxHelper.Watermark="Marca"
                      Controls:TextBoxHelper.ClearTextButton="True"
                      IsEditable="True"
                      Margin="0 5"/>
            <ComboBox x:Name="cbCategoriaProduto"
                      Controls:TextBoxHelper.Watermark="Categoria"
                      Controls:TextBoxHelper.ClearTextButton="True"
                      IsEditable="True"
                      Margin="0 5"/>
            <TextBlock x:Name="tbErro"
                       Margin="5"
                       Foreground="Red"
                       Visibility="Hidden" />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button Width="100"
                    Style="{DynamicResource AccentedSquareButtonStyle}"
                    Content="salvar"
                    Margin="5"
                    Click="Salvar_Click"/>
            <Button Width="100"
                    Style="{DynamicResource SquareButtonStyle}"
                    Content="cancelar"
                    Margin="5"
                    Click="Cancelar_Click"/>
        </StackPanel>
    </Grid>
</local:UserControlEditBase>
