@model IEnumerable<ProjetoLivraria.MVC.ViewModels.EditoraViewModel>

@{
    ViewBag.Title = "Editoras";
}

<h2>Editoras</h2>

<p>
    @Html.ActionLink("Nova", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.EditoraId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.EditoraId }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.EditoraId })
        </td>
    </tr>
}

</table>
